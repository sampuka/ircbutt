#include "Instance.hpp"

#include <string>
#include <iostream>
#include <thread>

using namespace std;

Instance::Instance()
{
    sock = new MSocket;
}

Instance::~Instance()
{
    delete sock;
    delete loop;
}

void Instance::login()
{
    sock->init();

    //Login
    sock->Msend("PASS oauth:zmff7qlqdjxpqs54r3lf4ga5xhlr51");
    sock->Msend("NICK bot_of_all_trades");

    loop = new thread(&Instance::main_loop, this); //Should do in another thread
}

void Instance::join(string channel)
{
    sock->Msend("JOIN " + channel);
}

void Instance::main_loop()
{
    string recv_string;

    while(true)
    {
	recv_string = sock->Mrecv();

	if(recv_string == "PING :tmi.twitch.tv")
	    sock->Msend("PONG :tmi.twitch.tv");
    }
    
}
